\begin_layout Subsection
Calculation of the Average Dipole Moment
\end_layout

\begin_layout Itemize
Average Dipole Moment (
\begin_inset Formula $\langle\mu\rangle)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle\mu\rangle=\frac{\text{weighted average energy for each orientation}}{\text{total energy for all orientations}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Consider the 3-dimensional case.
 In a sphere with radius 
\begin_inset Formula $r$
\end_inset

, the total number of molecules with energy 
\begin_inset Formula $E$
\end_inset

 in a volume element 
\begin_inset Formula $2\pi r^{2}\sin\theta d\theta$
\end_inset

 is 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{\# of dipoles with energy }E=2\pi A\sin\theta d\theta\exp(-E/kT)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
A=\text{Constant including radius}
\]

\end_inset


\end_layout

\begin_layout Itemize
Recall the orientation energy is given by 
\begin_inset Formula $E=-\mu\mathcal{E}\cos\theta$
\end_inset

.
 Substituting in for 
\begin_inset Formula $E$
\end_inset

, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{\# of dipoles with energy }E=2\pi A\sin\theta d\theta\exp\left(\frac{\mu\mathcal{E}\cos\theta}{kT}\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
The total energy for all orientations is then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{\pi}A\exp\left(\frac{\mu\mathcal{E}\cos\theta}{kT}\right)2\pi\sin\theta d\theta
\]

\end_inset


\end_layout

\begin_layout Itemize
The weighted average for each orientation is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{\pi}A\exp\left(\frac{\mu\mathcal{E}\cos\theta}{kT}\right)\left(\mu\cos\theta\right)2\pi\sin\theta d\theta
\]

\end_inset


\end_layout

\begin_layout Itemize
The average dipole moment is then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle\mu\rangle=\frac{\int_{0}^{\pi}A\exp\left(\frac{\mu\mathcal{E}\cos\theta}{kT}\right)\left(\mu\cos\theta\right)2\pi\sin\theta d\theta}{\int_{0}^{\pi}A\exp\left(\frac{\mu\mathcal{E}\cos\theta}{kT}\right)2\pi\sin\theta d\theta}
\]

\end_inset


\end_layout

\begin_layout Itemize
Integrating,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\langle\mu\rangle}{\mu}=L(a)=\coth a-\frac{1}{a}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{with }a=\frac{\mu\mathcal{E}}{kT}
\]

\end_inset


\end_layout

\begin_layout Itemize
For small 
\begin_inset Formula $a$
\end_inset

, 
\begin_inset Formula $\coth a\approx\frac{1}{a}+\frac{a}{3}+\cdots$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\therefore\frac{\langle\mu\rangle}{\mu}=\frac{a}{3}\hspace{1em}\text{for small a}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\boxed{\langle\mu\rangle=\frac{\mu^{2}\mathcal{E}}{3kT}}\hspace{1em}\text{or \hspace{1em}\boxed{\frac{\langle\mu\rangle}{\mu}=\frac{\mu\mathcal{E}}{3kT}}}
\]

\end_inset


\end_layout

