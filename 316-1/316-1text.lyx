\begin_layout Plain Layout
\noindent
\align left
\begin_inset Formula 
\[
J_{a}^{'}=-D_{a}\frac{\partial C_{a}}{\partial x}+\left(D_{a}-D_{b}\right)C_{a}\frac{\partial X_{a}}{\partial x}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align left
\begin_inset Formula 
\[
J_{a}^{'}=-D_{a}\frac{\partial C_{a}}{\partial x}+\left(D_{a}-D_{b}\right)X_{a}\frac{\partial C_{a}}{\partial x}
\]

