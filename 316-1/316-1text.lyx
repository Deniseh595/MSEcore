\noindent
\align left
\begin_inset Formula 
\[
J_{a}^{'}=-\frac{\partial C_{a}}{\partial x}\left[D_{a}-\left(D_{a}-D_{b}\right)X_{a}\right]
\]

\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align left
\begin_inset Formula 
\[
J_{a}^{'}=-\frac{\partial C_{a}}{\partial x}\left[D_{a}-D_{a}X_{a}+D_{b}X_{a}\right]
\]

\end_inset


\end_layout

