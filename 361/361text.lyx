\begin_layout Standard
Note that 
\begin_inset Formula $\Delta_{m};u_{m}$
\end_inset

are instantaneous vibrations that occur in the phonon lifetime which is
 on the order of ~ 
\begin_inset Formula $10^{-14}$
\end_inset

 seconds , and the intensity measurement time is > 
\begin_inset Formula $10^{-3}$
\end_inset

seconds.
 Therefore, a time average of these instantaneous intensities as affected
 by vibrational effects is used.
 
\end_layout

\begin_layout Standard
The function is integrated over a period of time 
\begin_inset Formula $T$
\end_inset

 that is long relative to the fluctuations and is normalized by dividing
 by 
\begin_inset Formula $T.$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle f(t)\rangle=\frac{1}{T}\int_{0}^{T}f(t)dt
\]

\end_inset


\end_layout

\begin_layout Standard
The time averaged intensity is indicated by bracket notation: 
\begin_inset Formula 
\[
\langle I_{(eu)}\rangle=f^{2}\sum_{m}\sum_{n}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}\langle e^{iq(u_{m}-u_{n})}\rangle
\]

\end_inset


\end_layout

\begin_layout Standard
Simplifying,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
e^{ix}=1+ix-\frac{x^{2}}{2}-\frac{ix^{3}}{6}+...
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle e^{iq(u_{m}-u_{n})}\rangle=1+iq\langle u_{m}-u_{n}\rangle-\frac{q^{2}}{2}\langle(u_{m}-u_{n})^{2}\rangle-...
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\approxeq1-\frac{q^{2}}{2}\langle(u_{m}-u_{n})^{2}\rangle=e^{\frac{-q^{2}}{2}\langle(u_{m}-u_{n})^{2}\rangle}=e^{\frac{-q^{2}}{2}\langle u_{m}^{2}+u_{n}^{2}-2u_{m}u_{n}\rangle}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle u_{m}^{2}\rangle=\langle u_{n}^{2}\rangle=\langle u^{2}\rangle
\]

\end_inset


\begin_inset Formula 
\[
\Rightarrow
\]

\end_inset


\begin_inset Formula 
\[
\langle e^{iq(u_{m}-u_{n})}\rangle\approxeq e^{-q^{2}\langle u^{2}-u_{m}u_{n}\rangle}
\]

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula 
\[
\langle u_{m}u_{n}\rangle=\underbrace{\alpha_{mn}}_{\mathclap{\mbox{correlation function }}}\langle u^{2}\rangle
\]

\end_inset


\end_layout

\begin_layout Standard
which accounts for the correlation of vibrational motion between the atoms,
 and may range from 0 to 1.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle e^{iq(u_{m}-u_{n})}\rangle=e^{-q^{2}\langle u^{2}\rangle(1-\alpha_{mn})}
\]

\end_inset

 
\end_layout

\begin_layout Standard
and 
\begin_inset Formula 
\[
\langle I_{(eu)}\rangle=\sum_{m}\sum_{n}f^{2}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}\underbrace{e^{q^{2}\langle u^{2}\rangle\alpha_{mn}}}_{\mathclap{\mathclap{=1+q^{2}\langle u^{2}\rangle\alpha_{mn}}\mbox{for q^{2}\langle u^{2}\rangle\alpha_{mn}\ll1 }}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=e^{-q^{2}\langle u^{2}\rangle}\underbrace{\sum_{m}\sum_{n}f^{2}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}}_{\mathclap{[CR]}}+\underbrace{q^{2}\langle u^{2}\rangle e^{-q^{2}\langle u^{2}\rangle}}_{\mathclap{xe^{-x}}}\sum_{m}\sum_{n}f^{2}\alpha_{mn}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}
\]

\end_inset

 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $[CR]=\mbox{Crystal Reflection }=f^{2}$
\end_inset

[3-D interference function] 
\end_layout

\begin_layout Standard
With higher 
\begin_inset Formula $2\theta,$
\end_inset

 the diffraction peak intensities decrease due to the damping term 
\begin_inset Formula $e^{-q^{2}\langle u^{2}\rangle}$
\end_inset

at the front.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
xe^{-x}=x(1-x+\frac{x^{2}}{2}-....)\approx x-x^{2}\approx1-e^{-x}=x-\frac{x^{2}}{2}+\frac{x^{3}}{6}...
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow\langle I_{(eu)}\rangle=e^{-q^{2}\langle u^{2}\rangle}[CR]+\left(1-e^{-q^{2}\langle u^{2}\rangle}\right)\sum_{n}f^{2}\alpha_{mn}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}
