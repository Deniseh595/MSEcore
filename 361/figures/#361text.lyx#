\begin_layout Standard
\begin_inset Formula $(\bar{S}-\bar{S}_{0})\bar{r}=|\bar{S}-\bar{S}_{0}||\bar{r}|cos\phi=2sin\theta rcos\phi$
\end_inset


\end_layout

\begin_layout Standard
Note: 
\begin_inset Formula $\int_{0}^{\pi}e^{iqrcos\phi}sin\phi d\phi$
\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $u=qrcos\phi$
\end_inset

 
\begin_inset Formula $\frac{du}{dq}=-qrsin\phi$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\phi=0\rightarrow u=qr$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\phi=\pi\rightarrow u=-qr$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow\int_{0}^{\pi}e^{iqrcos\phi}sin\phi d\phi=-\frac{1}{qr}\int_{-qr}^{qr}e^{iu}du=-\frac{1}{qr}\left[\int_{-qr}^{qr}cosudu+i\int_{-qr}^{qr}sinudu\right]=-\frac{2sin(qr)}{qr}
\]

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $q=4\pi sin\theta/\lambda$
\end_inset

 
\size small
Azaroff 
\begin_inset Formula $q\equiv k$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f_{e}=2\pi\int_{r=0}^{\infty}\int_{\phi=0}^{\pi}ρ(r)e^{iqrcos\phi}r^{2}sin\phi d\phi dr
\]

\end_inset

 
\end_layout

\begin_layout Standard
If 
\begin_inset Formula $ρ(\bar{r})=ρ(r)$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
=4\pi\int_{r=0}^{\infty}ρ(r)r^{2}\frac{sinqr}{qr}dr
\]

\end_inset

 for spherically symmetrical charge distribution
\end_layout

