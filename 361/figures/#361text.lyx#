\begin_layout Standard
\begin_inset Formula $\frac{6h^{2}}{m_{A}k}=1.151\times10^{-12}cm^{2}=1.151\times10^{4}\mathring{A}^{2}/A$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $B[\mathring{A}^{2}]=1.151\times10^{4}\frac{T[K]}{A[amu]\theta_{D}^{2}[\textdegree K]}Q\left(\frac{\theta_{D}}{T}\right)$
\end_inset


\end_layout

