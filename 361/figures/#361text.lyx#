\begin_layout Plain Layout
\noindent
\align center
(1) 
\begin_inset Formula $tan\beta-y/R$
\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align center
(2)
\begin_inset Formula $\alpha=x/R$
\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align center
(3) 
\begin_inset Formula $|\vec{r}_{V}^{*}|=\left(\frac{1}{\lambda}\right)sin\beta$
\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align center
(4) 
\begin_inset Formula $|\vec{r}_{H}^{*}|=|h\vec{a}*+k\vec{b}*|^{2}=\frac{1}{\lambda^{2}}[2(1-cos\alpha cos\beta)-sin^{2}\beta]$
\end_inset


\end_layout

