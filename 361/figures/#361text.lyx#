\begin_layout Standard
And...
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $|\bar{b}\times\bar{c}|=bc$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $|\bar{a}\cdot\bar{b}\times\bar{c}|=abc=V$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $|\bar{a}^{*}|=|\frac{\bar{b}\times\bar{c}}{\bar{a}\cdot\bar{b}\times\bar{c}}|=\frac{bc}{abc}=\frac{1}{a}$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $a^{*}=\frac{1}{a}$
\end_inset

, 
\begin_inset Formula $b^{*}=\frac{1}{b}$
\end_inset

, 
\begin_inset Formula $c^{*}=\frac{1}{c}$
\end_inset


\end_layout

\begin_layout Standard
...hence 
\begin_inset Quotes eld
\end_inset

reciprocal.
\begin_inset Quotes erd
\end_inset


\end_layout

\begin_layout Paragraph
Reciprocal - Lattice Vector
\end_layout

\begin_layout Standard
\begin_inset Formula $r_{hkl}^{*}=ha*+kb*+lc*$
\end_inset


\end_layout

\begin_layout Standard

\size footnotesize
Note: Hammond - 
\begin_inset Formula $r_{hkl}^{*}=d_{hkl}^{*}$
\end_inset

 Cullity - 
\begin_inset Formula $r_{hkl}^{*}=H_{hkl}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Extends in reciprocal space from origin 000 to rectangular lattice point
 hkl 
\end_layout

\begin_layout Standard
\begin_inset Formula $r_{hkl}^{*}\bot(hkl)$
\end_inset

plane
\end_layout

\begin_layout Enumerate
Find interplanar angle 
\begin_inset Formula $\phi$
\end_inset

 between 
\begin_inset Formula $(h_{1}k_{1}l_{1})$
\end_inset

and 
\begin_inset Formula $(h_{2}k_{2}l_{2})$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard

\size footnotesize
i.e.find angle between reciprocal lattice vectors 
\begin_inset Formula $r_{1}^{*}$
\end_inset

& 
\begin_inset Formula $r_{2}^{*}.$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $cos(\phi)=\frac{\bar{r}_{1}^{*}\cdot\bar{r}_{2}^{*}}{r_{1}^{*}r_{2}^{*}}$
\end_inset

 
\begin_inset Formula $r_{1}^{*}=|\bar{r}_{1}^{*}|=\sqrt{\bar{r}_{1}^{*}\cdot\bar{r}_{2}^{*}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\bar{r}_{1}^{*}\cdot\bar{r}_{2}^{*}=(h_{1}\bar{a}*+k_{1}\bar{b}*+l_{1}\bar{c}*)\cdot(h_{2}\bar{a}*+k_{2}\bar{b}*+l_{2}\bar{c}*)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=h_{1}h_{2}a*^{2}+k_{1}k_{2}b*^{2}+l_{1}l_{2}c*^{2}+(h_{1}k_{2}+k_{1}h_{2})\bar{a}*\cdot\,\bar{b}*+(h_{1}l_{2}+l_{1}h_{2})\bar{a}*\cdot\,\bar{c}*+(k_{1}l_{2}+l_{1}k_{2})\bar{b}*\cdot\,\bar{c}*$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Note: 
\begin_inset Formula $\bar{a}*\cdot\,\bar{b}*=a*b*cos(\gamma*),$
\end_inset

etc.
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Example: 
\end_layout

\begin_layout Standard
Find angle between (111) and (110) in cube? 
\end_layout

\begin_layout Standard
\noindent
\begin_inset Formula $cos(\phi)=\frac{\bar{r}_{111}^{*}\cdot\,\bar{r}_{110}^{*}}{r_{111}^{*}r_{110}^{*}}=\frac{(1+1+0)a^{*2}}{\sqrt{3}a^{*}\sqrt{2}a^{*}}=\frac{2}{\sqrt{6}}\Rightarrow\phi=35.26\textdegree$
\end_inset


\end_layout

