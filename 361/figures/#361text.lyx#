\begin_layout Standard

\series bold
Direction Indices
\end_layout

\begin_layout Standard
\begin_inset Formula $[uvw]=u\textbf{a}+v\textbf{b}+w\textbf{c}$
\end_inset


\end_layout

\begin_layout Standard
Defines a direction with respect to the unit cell axis.
\end_layout

\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status open

