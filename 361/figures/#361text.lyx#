\begin_inset Caption Standard

\begin_layout Plain Layout
\begin_inset Formula $d_{100}$
\end_inset

 spacing
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Standard
Note: 
\begin_inset Formula $\bar{a}*\cdot\,\bar{b}*=a*b*cos(\gamma*)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
For Ortho - 
\begin_inset Formula $d_{hkl}=\frac{1}{r_{hkl}*}=\frac{1}{(\frac{h^{2}}{a^{2}}+\frac{k^{2}}{b^{2}}+\frac{l^{2}}{c^{2}})^{1/2}}$
\end_inset


\end_layout

\begin_layout Standard
For Cubic - 
\begin_inset Formula $d_{hkl}=\frac{a}{(h^{2}+k^{2}+l^{2})}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Monoclinic (
\begin_inset Formula $\alpha=\beta=90\textdegree)$
\end_inset

 
\begin_inset Formula $a=4Å,\, b=3Å,\, c=6Å,\,\gamma=70\textdegree$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align left
\begin_inset Formula $r_{100}*=a*=\frac{1}{d_{100}}\neq\frac{1}{4\mathring{A}}$
\end_inset

 
\begin_inset space \qquad{}
\end_inset


\begin_inset Formula $d_{100}=a*^{-1}$
\end_inset


\begin_inset space \qquad{}
\end_inset


\begin_inset Formula $a*=?\neq\frac{1}{a}$
\end_inset

 since 
\begin_inset Formula $\gamma\neq90\textdegree$
\end_inset


\end_layout

\begin_layout Standard
Use 
\begin_inset Formula $\bar{a}*\cdot\,\bar{a}=1\rightarrow a*acos(\frac{\pi}{2}-cos\gamma)=1$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $a*=\frac{1}{asin(\gamma)}=\frac{0.250}{0.94}=0.266\mathring{A}^{-1}$
\end_inset


\begin_inset space \qquad{}
\end_inset


\begin_inset Formula $\therefore d_{100}=asin(\gamma)=3.759\mathring{A}\neq4\mathring{A}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Likewise 
\begin_inset Formula $b*=\frac{1}{bsin(\gamma)}=\frac{0.333}{0.94}=0.355\mathring{A}^{-1}$
\end_inset

 
\begin_inset space \qquad{}
\end_inset


\begin_inset Formula $\therefore d_{010}=bsin(\gamma)=2.819\mathring{A}$
\end_inset


\end_layout

