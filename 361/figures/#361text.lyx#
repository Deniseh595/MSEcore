\begin_layout Paragraph
Describe a crystal in terms of primitive unit crystal.
 
\end_layout

\begin_layout Itemize
1 atom per lattice point at origin
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $M=M_{1}M_{2}M_{3}=$
\end_inset

# of unit cells
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $m=\{m_{1}m_{2}m_{3}\}$
\end_inset

= unit crystal index
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $\bar{R}_{m}=$
\end_inset

lattice point position vector.
 Locates origin of the 
\begin_inset Formula $m^{th}$
\end_inset

unit cell
\end_layout

\begin_layout Itemize
Let 
\begin_inset Formula $\bar{R}'_{m}(t)=\bar{R}_{m}+\underbrace{\bar{\Delta}_{m}}_{\mathclap{\mbox{instantaneous displacement changing in time}}}(t)$
\end_inset

 
\end_layout

