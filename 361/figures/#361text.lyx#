\begin_inset Caption Standard

\begin_layout Plain Layout
XRR Analysis of 
\begin_inset Formula $C_{60}$
\end_inset

attached to Silica surface; Grown by the Mirkin Group at NU
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Section
Order-Disorder
\end_layout

\begin_layout Subsection
Order-disorder geometry
\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $\beta$
\end_inset

 Brass CuZn (Cubic Structure)
\end_layout

\begin_layout Itemize

\series bold
Ordered
\series default
 from 
\begin_inset Formula $\rightarrow$
\end_inset

Cu at 000, Zn at 
\begin_inset Formula $\frac{1}{2}\frac{1}{2}\frac{1}{2}$
\end_inset

 , or CsCl structure 
\end_layout

\begin_deeper
\begin_layout Itemize
Cubic P
\end_layout

\end_deeper
\begin_layout Itemize

\series bold
Disordered
\series default
 
\begin_inset Formula $\rightarrow$
\end_inset

some Cu occupy Zn stires, some Zn occupy Cu sites, randomly disordered 
\begin_inset Formula $\rightarrow$
\end_inset

each site has an equal likelihood of Zn or Cu occupation Cubic I 
\end_layout

\begin_deeper
\begin_layout Itemize
Cubic I
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status open

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Graphics
	filename figures/orderdi.png
	width 40page%

\end_inset


\begin_inset Caption Standard

\begin_layout Plain Layout
Ordered 
\begin_inset Formula $\beta$
\end_inset

 brass CuZn; Superlattice reflections (100),(300),(111), etc.
 
\begin_inset Formula $\rightarrow$
\end_inset

allowed by Cubic P and disallowed by Cubic I
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
Fundamental reflections are allowed by both P and I :
\begin_inset Formula $h+k+l=2n$
\end_inset


\end_layout

\begin_layout Standard
The intensity in the superlattice reflection indicates the degree of order
 present in the crystal.
 A high temperature form is generally disordered, while one that is cooling
 down has ordered domains meeting at domain walls.
 
\end_layout

\begin_layout Subsection
Long-range order (W.L.
 Bragg and E.J.
 Williams)
\end_layout

\begin_layout Standard
Consider a binary compound (CuZn, 
\begin_inset Formula $Au_{3}Cu$
\end_inset

, etc.
 ) with 2 types of atoms A and B, with two correct sites in unit cell 
\begin_inset Formula $\alpha$
\end_inset

 and 
\begin_inset Formula $\beta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $N_{A}$
\end_inset

 atoms of type A and sites 
\begin_inset Formula $\alpha,$
\end_inset

 
\begin_inset Formula $N_{B}$
\end_inset

 atoms of type B and sites 
\begin_inset Formula $\beta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $N=N_{A}+N_{B}=$
\end_inset

total # of atoms in the crystal 
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Fractions that change with temperature
\end_layout

\begin_layout Itemize
\begin_inset Formula $r_{\alpha}$
\end_inset

= fraction of rightly occupied 
\begin_inset Formula $\alpha$
\end_inset

 sites
\end_layout

\begin_layout Itemize
\begin_inset Formula $w_{\alpha}=$
\end_inset

fraction of wrongly occupied 
\begin_inset Formula $\alpha$
\end_inset

 sites
\end_layout

\begin_layout Itemize
\begin_inset Formula $r_{\beta}$
\end_inset

= fraction of rightly occupied 
\begin_inset Formula $\beta$
\end_inset

 sites
\end_layout

\begin_layout Itemize
\begin_inset Formula $w_{\beta}$
\end_inset

= fraction of wrongly occupied 
\begin_inset Formula $\beta$
\end_inset

 sites 
\end_layout

\begin_layout Standard
\begin_inset Formula $r_{\alpha}+w_{\alpha}=r_{\beta}+w_{\beta}=1.0$
\end_inset

 
\end_layout

\begin_layout Standard
Complete order 
\begin_inset Formula $\rightarrow$
\end_inset


\begin_inset Formula $r_{\alpha}=r_{\beta}=1.0$
\end_inset

 
\begin_inset Formula $w_{\alpha}=w_{\beta}=0$
\end_inset

 
\end_layout

\begin_layout Standard
Complete or random disorder 
\begin_inset Formula $\rightarrow$
\end_inset

 
\begin_inset Formula $r_{\alpha}=N_{A}/N=m_{A}$
\end_inset

 
\end_layout

\begin_layout Standard
In general 
\begin_inset Formula $N_{a}w_{\alpha}=N_{B}w_{\beta}\rightarrow m_{A}w_{\alpha}=m_{B}w_{\beta}$
\end_inset


\end_layout

\begin_layout Subsubsection
Long range order parameter 
\end_layout

\begin_layout Standard
\begin_inset Formula $S=r_{\alpha}-w_{\beta}=r_{\beta}-w_{\alpha}$
\end_inset


\end_layout

\begin_layout Standard
Complete order 
\begin_inset Formula $\rightarrow$
\end_inset

S=1 ; Random disorder 
\begin_inset Formula $\rightarrow$
\end_inset

S=0
\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $Au_{3}Cu$
\end_inset

 in P cubic cell 
\end_layout

\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status open

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Graphics
	filename figures/au3cu.png
	width 20page%

\end_inset


\begin_inset Caption Standard

\begin_layout Plain Layout
P cubic cell
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $B\rightarrow$
\end_inset

Cu at (000) 
\begin_inset Formula $\beta$
\end_inset

 site
\end_layout

\begin_deeper
\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $A\rightarrow$
\end_inset

Au at {
\begin_inset Formula $\frac{1}{2}\frac{1}{2}0,\frac{1}{2}0\frac{1}{2},0\frac{1}{2}\frac{1}{2}\}\alpha$
\end_inset

sites 
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $m_{A}=\frac{3}{4}=\frac{N_{A}}{N}$
\end_inset

 
\begin_inset Formula $m_{B}=\frac{1}{4}$
\end_inset

 
\begin_inset Formula $2w_{\alpha}=w_{\beta}$
\end_inset

 
\end_layout

\end_deeper
\begin_layout Paragraph
Effective Atomic Scattering Factor
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $f_{\alpha}=r_{\alpha}f_{A}+w_{\alpha}f_{B}$
\end_inset

 
\begin_inset Formula $\alpha$
\end_inset

 site scattering factor
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $f_{\beta}=r_{\beta}f_{B}+w_{\beta}f_{A}$
\end_inset

 
\begin_inset Formula $\beta$
\end_inset

 site scattering factor 
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $F_{hkl}=f_{\beta}e^{0}+f_{\alpha}(e^{\pi i(h+k)}+e^{\pi i(h+l)}+e^{\pi i(k+l)})$
\end_inset

 
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $=f_{\beta}+3f_{\alpha}$
\end_inset

 For hkl unmixed
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $=r_{\beta}f_{B}+w_{\beta}f_{A}+3r_{\alpha}f_{A}+3w_{\alpha}f_{B}=(3r_{\alpha}+w_{\beta})f_{A}+(r_{\beta}+3w_{\alpha})f_{B}$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $3r_{\alpha}+w_{\beta}=3(1-w_{\alpha})+w_{\beta}=3-3w_{\alpha}+w_{\beta}=3$
\end_inset

 
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $F_{hkl}=3f_{A}+f_{B}$
\end_inset

 for hkl unmixed (fundamental reflection) independent of S 
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
For hkl mixed (superlattice reflections)
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $F_{hkl}=f_{\beta}e^{0}+f_{\alpha}(e^{\pi i(h+k)}+e^{\pi i(h+l)}+e^{\pi i(k+l)})$
\end_inset

 
\end_layout

\begin_deeper
\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $=f_{\beta}+f_{\alpha}(-1)$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $=(r_{\beta}f_{B}+w_{\beta}f_{A})-(r_{\alpha}f_{A}+w_{\alpha}f_{B})$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $=(r_{\beta}-w_{\alpha})f_{B}-(r_{\alpha}-w_{\beta})f_{A}$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $=(f_{B}-f_{A})S$
\end_inset

 recall 
\begin_inset Formula $S=r_{\alpha}-w_{\beta}=r_{\beta}-w_{\alpha}$
\end_inset


\end_layout

\end_deeper
\begin_layout Standard
Therefore, for 
\begin_inset Formula $Au_{3}Cu$
\end_inset

 
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $F_{hkl}=3f_{Au}+f_{Cu}$
\end_inset

 for hkl unmixed and 
\begin_inset Formula $F_{hkl}=(f_{Au}-f_{Cu})(-S)$
\end_inset

 for hkl mixed 
\end_layout

\begin_deeper
\begin_layout Labeling
\labelwidthstring 00.00.0000
Note 
\begin_inset Formula $f_{Au}>f_{Cu}$
\end_inset

 , 
\begin_inset Formula $z_{Au}>z_{Cu}$
\end_inset

 , 
\begin_inset Formula $79>29$
\end_inset

 
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status open

