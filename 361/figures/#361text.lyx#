\begin_layout Standard

\series bold
Debye-Waller Factor
\series default
 
\begin_inset Formula $=e^{-2M}=e^{-BQ/2}=e^{-4\pi^{2}\langle u_{hkl}^{2}\rangle/d_{hkl}^{2}}$
\end_inset


\end_layout

\begin_layout Itemize
For Si (220), 
\begin_inset Formula $d_{220}=1.92\mathring{A}$
\end_inset

 
\begin_inset Formula $e^{-2M}=e^{-0.0425}=0.958$
\end_inset

 at R.T.
 
\end_layout

\begin_layout Itemize
For Si (880), 
\begin_inset Formula $d_{880}=0.48\mathring{A}$
\end_inset

 
\begin_inset Formula $e^{-2M}=(e^{-0.0425})^{16}=e^{-0.0680}=0.506$
\end_inset

 at R.T.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{e^{-2M_{h_{2}l_{2}k_{2}}}}{e^{-2M_{h_{1}k_{1}l_{1}}}}=(e^{-2M_{h_{1}k_{1}l_{1}}})^{\overbrace{(h_{2}^{2}+k_{2}^{2}+l_{2}^{2})}^{\mathclap{\mbox{if cubic}}}/(h_{1}^{2}+k_{1}^{2}+l_{2}^{2})}=(0.0958)^{16}=0.503
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\langle I_{eu}\rangle=e^{-BQ^{2}/2}[CR]+\underbrace{(1-e^{-BQ^{2}/2})\sum_{m}\sum_{n}f^{2}\alpha_{mn}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}}$
\end_inset


\end_layout

