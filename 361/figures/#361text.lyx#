\begin_layout Paragraph
Total External Reflection of X-rays from a Mirror Surface
\end_layout

\begin_layout Standard
Index of refraction: 
\begin_inset Formula $n<1$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
n=1-\delta-i\beta
\]

\end_inset

 
\begin_inset Formula $\delta=\frac{N_{e}r_{e}\lambda^{2}}{2\pi}$
\end_inset

 , 
\begin_inset Formula $\beta=\frac{\lambda\mu}{4\pi}$
\end_inset


\end_layout

