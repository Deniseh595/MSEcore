\begin_layout Standard
\begin_inset Formula 
\[
I_{(eu)}(\bar{Q})=\left[\sum_{m}^{M}f_{m}e^{2\pi i\bar{Q}\cdot\bar{R}_{m}}\right]\left[\sum_{m}^{M}f_{m}e^{-2\pi i\bar{Q}\cdot\bar{R}_{m}}\right]=\sum_{m}^{M}\sum_{n}^{M}f_{m}f_{n}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
(assume 
\begin_inset Formula $f_{m}=f_{n}=f)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{(eu)}(\bar{Q})=f^{2}\sum_{m}\sum_{n}e^{2\pi i\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}e^{2\pi i\bar{Q}\cdot(\bar{\Delta}_{m}-\bar{\Delta}_{n})}
\]

\end_inset


\end_layout

