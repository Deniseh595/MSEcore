\begin_layout Standard
Ratios 
\begin_inset Formula $\rightarrow$
\end_inset

Cubic 
\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{(sin^{2}\theta)_{n}}{(sin^{2}\theta)_{1}}=\frac{(h^{2}+k^{2}+l^{2})_{n}}{(h^{2}+k^{2}+l^{2})_{1}}$
\end_inset


\end_layout

\begin_layout Standard
unmixed hkl: Cubic F
\end_layout

\begin_layout Standard
\begin_inset Formula $h+k+l\neq4n\pm2$
\end_inset

: diamond cubic
\end_layout

\begin_layout Standard
What is 
\begin_inset Quotes eld
\end_inset

a
\begin_inset Quotes erd
\end_inset

?
\end_layout

\begin_layout Standard
\begin_inset Formula $r_{400}^{*}=16a*^{2}=\frac{16}{a^{2}}=\frac{4sin^{2}\theta_{400}}{\lambda^{2}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $a=\frac{4\lambda}{2sin\theta_{400}}=\frac{2\times1.542\mathring{A}}{(0.322)^{1/2}}=5.434\mathring{A}$
\end_inset


\end_layout

\begin_layout Standard
Silicon a=
\begin_inset Formula $5.431\mathring{A}$
\end_inset


\end_layout

