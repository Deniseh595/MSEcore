	width 40page%

\end_inset


\begin_inset Caption Standard

\begin_layout Plain Layout
\begin_inset Formula $Au_{3}Cu$
\end_inset

 Powder XRD Patterns
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


