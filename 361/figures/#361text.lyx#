\begin_inset Caption Standard

\begin_layout Plain Layout
Location of atom within entire crystal (
\begin_inset Formula $\bar{R}_{m_{1}m_{2}m_{3}}^{n}$
\end_inset

)
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Paragraph
Total scattered amplitude relative to 
\begin_inset Formula $E_{e}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{E_{Total}}{E_{e}}=\sum_{m_{1}=0}^{M_{1}-1}\sum_{m_{2}=0}^{M_{2}-1}\sum_{m_{3}=0}^{M_{3}-1}\sum_{n=0}^{N-1}f_{n}e^{2\pi i\bar{Q}\cdot\bar{R}_{m_{1}m_{2}m_{3}}^{n}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\sum_{m_{1}=0}^{M_{1}-1}\sum_{m_{2}=0}^{M_{2}-1}\sum_{m_{3}=0}^{M_{3}-1}\sum_{n=0}^{N-1}f_{n}e^{2\pi i\bar{Q}\cdot(m_{1}\bar{a}+m_{2}\bar{b}+m_{3}\bar{c})}e^{2\pi\bar{Q}\cdot\bar{r}_{n}}
\]

\end_inset


\end_layout

\begin_layout Standard
Define Structure Factor: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F=\sum_{n=0}^{N-1}f_{n}e^{2\pi i\bar{Q}\cdot\bar{r}_{n}}
\]

\end_inset


\end_layout

\begin_layout Standard
Internal interference effect for N atoms in the unit cell: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{E_{Total}}{E_{e}}=F\sum_{m_{1}=0}^{M_{1}-1}e^{2\pi i\bar{Q}\cdot m_{1}\bar{a}}\sum_{m_{2}=0}^{M_{2}-1}e^{2\pi i\bar{Q}\cdot m_{2}\bar{b}}\sum_{m_{3}=0}^{M_{3}-1}e^{2\pi i\bar{Q}\cdot m_{3}\bar{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
Consider
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
\sum_{m_{1}=0}^{M_{1}-1}e^{2\pi i\bar{Q}\cdot m_{1}\bar{a}}=\sum_{m=0}^{M-1}x^{m}
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\frac{x^{M}-1}{x-1}=\frac{e^{2\pi i\bar{Q}\cdot\bar{a}M_{1}}-1}{e^{2\pi i\bar{Q}\cdot\bar{a}}-1}=\frac{e^{2i\eta M}-1}{e^{2i\eta}-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\frac{e^{i\eta M}(e^{i\eta M}-e^{-i\eta M})}{e^{i\eta}(e^{i\eta}-e^{-i\eta})}=\frac{e^{i\eta M}sin\eta M}{e^{i\eta}sin\eta}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\frac{sin(\pi\bar{Q}\cdot\bar{a}M_{1})e^{\pi i\bar{Q}\cdot\bar{a}M_{1}}}{sin(\pi\bar{Q}\cdot\bar{a})e^{\pi\bar{Q}\cdot\bar{a}}}=\frac{sin(\pi\bar{Q}\cdot\bar{a}M_{1})}{sin(\pi\bar{Q}\cdot\bar{a})}e^{\pi i\bar{Q}\cdot\bar{a}(M_{1}-1)}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
\bar{I}_{eu}=\left|\frac{E_{total}}{E_{e}}\right|^{2}=|F|^{2}\frac{sin^{2}(\pi\bar{Q}\cdot\bar{a}M)}{sin^{2}(\pi\bar{Q}\cdot\bar{a})}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center

\series bold
1D Interference Function
\end_layout

\begin_layout Standard
\noindent

\series bold
Total Scattered Intensity relative to 
\begin_inset Formula $I_{e^{-}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\bar{I}_{eu}=\left|\frac{E_{total}}{E_{e}}\right|^{2}=FF^{*}\left|\frac{e^{2\pi i\bar{Q}\cdot\bar{a}M_{1}}-1}{e^{2\pi i\bar{Q}\cdot\bar{a}}-1}\cdot\frac{e^{2\pi i\bar{Q}\cdot\bar{b}M_{2}}-1}{e^{2\pi i\bar{Q}\cdot\bar{b}}-1}\cdot\frac{e^{2\pi i\bar{Q}\cdot\bar{c}M_{3}}-1}{e^{2\pi i\bar{Q}\cdot\bar{c}}-1}\right|^{2}$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
\bar{I}_{eu}=|F|^{2}\frac{sin^{2}(M_{1}\pi\bar{Q}\cdot\bar{a})}{sin^{2}(\pi\bar{Q}\cdot\bar{a})}\cdot\frac{sin^{2}(M_{2}\pi\bar{Q}\cdot\bar{b})}{sin^{2}(\pi\bar{Q}\cdot\bar{b})}\cdot\frac{sin^{2}(M_{3}\pi\bar{Q}\cdot\bar{c})}{sin^{2}(\pi\bar{Q}\cdot c)}
\]

\end_inset


\end_layout

