\begin_layout Paragraph
Sym.
 Refl.
 Powder Diffraction
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P'=\frac{I_{0}l}{16\pi R}r_{e}^{2}\frac{\lambda^{3}}{V_{c}^{2}}m_{hkl}|F_{hkl}|^{2}e^{-2M}(LP)\frac{A}{2\mu}=C(LP)m_{hkl}|F_{hkl}|^{2}e^{-2M}
\]

\end_inset


\end_layout

\begin_layout Standard
Intensities multiplied by 
\begin_inset Formula $e^{-2M}=e^{-BQ^{2}/2}$
\end_inset


\end_layout

\begin_layout Standard
M depends on:
\end_layout

\begin_layout Itemize
crystal type (Si, Ge, etc.
 ) 
\end_layout

\begin_layout Itemize
direction 
\begin_inset Formula $r_{hkl}^{*}$
\end_inset

(anistropic crystals) 
\end_layout

\begin_layout Itemize
d-spacing ~ 1/
\begin_inset Formula $r_{hkl}^{*}$
\end_inset


\end_layout

\begin_layout Itemize
Temp.
 T 
\end_layout

\begin_layout Itemize
Crystal bonding (covalent, molecular, etc.
 ) 
\end_layout

\begin_layout Standard
\begin_inset Quotes eld
\end_inset

B
\begin_inset Quotes erd
\end_inset

 can be measured by comparing integrated intensity of hkl to 2h 2k 2l reflection
 
\end_layout

\begin_layout Subparagraph
For h k l 
\begin_inset Formula $P_{1}'=Cm_{hkl}e^{-BQ_{1}^{2}/2}|F_{hkl}|^{2}(LP)_{1}$
\end_inset


\end_layout

\begin_layout Subparagraph
For 2h 2k 2l 
\begin_inset Formula $P_{2}'=Cm_{hkl}e^{-BQ_{2}^{2}/2}|F_{2h2k2l}|^{2}(LP)_{2}$
\end_inset


\end_layout

\begin_layout Subparagraph
\begin_inset Formula $\frac{P_{1}'}{P_{2}'}=\frac{(LP)_{1}}{(LP)_{2}}\frac{|F_{hkl}|^{2}}{|F_{2h2k2l}|^{2}}e^{2BQ_{1}^{2}/2}$
\end_inset

 Since 
\begin_inset Formula $Q_{2}=2Q_{1}$
\end_inset

 
\begin_inset Formula $Q_{2}^{2}=4Q_{1}^{2}$
\end_inset

 
\end_layout

