\begin_layout Standard
\begin_inset Formula $F_{hkl}=f\left[1+e^{2\pi i\left(\frac{h}{3}+\frac{2k}{3}+\frac{l}{2}\right)}\right]=f(1+e^{2\pi iq})$
\end_inset

, where 
\begin_inset Formula $q=\frac{h+2k}{3}+\frac{l}{2}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $FF*=f^{2}\left(2+e^{2\pi iq}+e^{-2\pi iq}\right)=2f^{2}(1+cos2\pi q)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\left|F\right|^{2}=4f^{2}cos^{2}\pi q=4f^{2}cos^{2}\left[\pi\left(\frac{h+2k}{3}\right)+\frac{l}{2}\right]$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $l=2n$
\end_inset

 (even) AND 
\begin_inset Formula $h+2k=3m$
\end_inset

 
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $\Rightarrow q=(m+n)\in Z\rightarrow cos^{2}\pi q=(\pm1)^{2}=1$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $|F|^{2}=4f^{2}$
\end_inset

 e.g., (002), (112), ...
 very strong
\end_layout

\begin_layout Standard
\begin_inset Formula $l=2n$
\end_inset

 AND 
\begin_inset Formula $h+2k=3m\pm1$
\end_inset

 
\begin_inset Formula $\Rightarrow q=(m+n)\pm\frac{1}{3}=m'\pm\frac{1}{3}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space \hspace{}
\length 4cm
\end_inset


\begin_inset Formula $cos\pi q=cos\pi m'cos\frac{\pi}{3}\pm sin\pi m'sin\frac{\pi}{3}=cos\frac{\pi}{3}=\frac{1}{2}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $|F|^{2}=f^{2}$
\end_inset

 e.g., (102), (200), (100)...weak 
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $l=2n+1$
\end_inset

 (odd) AND 
\begin_inset Formula $h+2k=3m$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $\Rightarrow q=n+\frac{1}{2}+m=m'+\frac{1}{2}$
\end_inset


\begin_inset Formula $\rightarrow cos\pi q=cosm'\pi cos\frac{\pi}{2}-sinm'\pi sin\frac{\pi}{2}=0$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $|F|^{2}=0$
\end_inset

 e.g., (001), (111), ...
 forbidden 
\end_layout

\begin_layout Standard
\begin_inset Formula $l=2n+1$
\end_inset

 AND 
\begin_inset Formula $h+2k=3m\pm1$
\end_inset

 
\begin_inset Formula $\Rightarrow q=n+\frac{1}{2}+m\pm\frac{1}{3}=m'\pm\frac{1}{6}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $|F|^{2}=3f^{2}$
\end_inset

 e.g., (103), (013), (101)...
 strong 
\end_layout

\end_deeper
