\begin_layout Enumerate
Find d-spacing 
\begin_inset Formula $d_{hkl}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Use 
\begin_inset Formula $|\bar{r}_{hkl}^{*}|=r_{hkl}^{*}=\frac{1}{d_{hkl}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $d_{hkl}=$
\end_inset


\begin_inset Formula $\bot$
\end_inset

distance between 2 ‖ planes with intercept differences = 
\begin_inset Formula $\frac{a}{h},\frac{b}{k},\frac{c}{l}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $r_{hkl}^{*}=\sqrt{\bar{r}_{hkl}^{*}\cdot\,\bar{r}_{hkl}^{*}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $r_{hkl}^{*2}=h^{2}a*^{2}+k^{2}b*^{2}+l^{2}c+2hk\bar{a}*\cdot\,\bar{b}*+2hl\bar{a}*\cdot\,\bar{c}*+2kl\bar{b}*\cdot\,\bar{c}*$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
For 
\begin_inset Formula $\alpha=\beta=\gamma=90\textdegree$
\end_inset

 , 
\begin_inset Formula $2hk\bar{a}*\cdot\,\bar{b}*+2hl\bar{a}*\cdot\,\bar{c}*+2kl\bar{b}*\cdot\,\bar{c}*=0$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Float figure
