\begin_inset Caption Standard

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
y = layer i.e., 
\begin_inset Formula $l=0,l=\pm1$
\end_inset

etc.
 
\end_layout

\begin_layout Standard
\noindent
\align center
x= where on the layer line
\end_layout

\begin_layout Standard
\noindent
\align center
R= film cylinder radius 
\end_layout

\begin_layout Standard
Define angles: 
\end_layout

\begin_layout Standard
\begin_inset Formula $\alpha=x/R\rightarrow$
\end_inset

 in-plane angle
\end_layout

\begin_layout Standard
\begin_inset Formula $tan\beta=y/R\rightarrow$
\end_inset

elevation angle 
\end_layout

\begin_layout Standard
Separate 
\begin_inset Formula $\bar{r}_{hkl}^{*}=\bar{r}_{H}^{*}+\bar{r}_{V}^{*}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $|\vec{r}_{V}^{*}|=\left|\frac{\bar{S}}{\lambda}\right|sin\beta\rightarrow\lambda r_{V}^{*}=sin\beta$
\end_inset


\end_layout

\begin_layout Standard
Note 
\begin_inset Formula $cos2\theta=cos\alpha cos\beta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\lambda(r_{H}^{*})^{2}=2(1-cos\alpha cos\beta)-sin^{2}\beta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $(r_{hkl}^{*})^{2}=(r_{H}^{*})^{2}+(r_{V}^{*})^{2}=\frac{4sin^{2}\vartheta}{\lambda^{2}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
A.
 Measuring 
\begin_inset Formula $y\rightarrow\beta\rightarrow r_{V}^{*}\Rightarrow r_{00l}^{*}\rightarrow c$
\end_inset

 determined directly
\end_layout

\begin_layout Standard
By remounting the crystal to rotate about 
\begin_inset Formula $\bar{a}$
\end_inset

or 
\begin_inset Formula $\bar{b}$
\end_inset


\begin_inset Formula $\rightarrow$
\end_inset

determining a, b
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
B.
 Indexing a reflection in layer line
\end_layout

\begin_layout Standard
For a given layer line, 
\begin_inset Formula $\beta$
\end_inset

 is constant.
 
\end_layout

\begin_layout Standard
\begin_inset Formula $\bar{r}_{H}^{*}=h\bar{a}^{*}+k\bar{b}^{*}$
\end_inset

for 
\begin_inset Formula $l=$
\end_inset

constant layer line
\end_layout

\begin_layout Standard
\begin_inset Formula $\lambda^{2}(r_{H}^{*})^{2}=[h^{2}(a^{*})^{2}+k^{2}(b^{*})^{2}+2hka^{*}b^{*}cos\gamma^{*}]\lambda^{2}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=2(1-cos\alpha cos\beta)-sin^{2}\beta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\alpha=x/R$
\end_inset

 
\begin_inset Formula $tan\beta=y/R$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\therefore x,y\rightarrow r_{H}^{*},r_{V}^{*}$
\end_inset


\end_layout

\begin_layout Paragraph
Bernal Chart 
\end_layout

\begin_layout Standard
Graphical method for converting 
\begin_inset Formula $x,y\rightarrow\lambda r_{H}^{*},\lambda r_{V}^{*}$
\end_inset


\end_layout

\begin_layout Standard
Horizontal Lines 
\begin_inset Formula $\rightarrow$
\end_inset

constant 
\begin_inset Formula $l$
\end_inset

 for 
\begin_inset Formula $\bar{c}$
\end_inset

 axis rotating 
\end_layout

\begin_layout Standard
\begin_inset Formula $\lambda r_{H}^{*}$
\end_inset

 lines equally incremented from 0 to 2.0 
\end_layout

\begin_layout Standard
\begin_inset Formula $\lambda r_{H}^{*}=0\rightarrow x=0\rightarrow\alpha=0\rightarrow hk=00$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\lambda r_{H}^{*}=2\rightarrow x=\pi R\rightarrow\alpha=\pi\rightarrow r^{*}=r_{H}^{*}=\frac{2}{\lambda}$
\end_inset

 for 
\begin_inset Formula $l=0$
\end_inset


\end_layout

\begin_layout Itemize
Start with 
\begin_inset Formula $l=0$
\end_inset

 layer
\end_layout

\begin_layout Itemize
Assume 
\begin_inset Formula $a^{*}=b^{*},\gamma^{*}=90\textdegree\rightarrow\frac{1}{a}(h^{2}+k^{2})^{\frac{1}{2}}$
\end_inset


\end_layout

\begin_layout Itemize
Assume 
\begin_inset Formula $a^{*}\neq b^{*},\gamma^{*}=90\textdegree\rightarrow r_{H}^{*}=\left(\frac{h^{2}}{a^{2}}+\frac{k^{2}}{b^{2}}\right)^{1/2}$
\end_inset


\end_layout

