\begin_layout Standard
For 
\begin_inset Formula $\theta-2\theta$
\end_inset

 scan along 
\begin_inset Formula $\bar{r}_{100}^{*}$
\end_inset

, diffraction peak width 
\begin_inset Formula $\propto$
\end_inset

 Length of reciprocal 
\begin_inset Formula $\propto\frac{2}{aM_{1}}$
\end_inset

 spot in 
\begin_inset Formula $\bar{r}_{100}^{*}$
\end_inset

 direction 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Delta FWHM=\epsilon_{1/2}(radians)=\left(\frac{ln2}{\pi}\right)^{1/2}\frac{\lambda}{D_{hkl}cos\theta}=\frac{0.47\lambda}{D_{hkl}cos\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
Scherrer's Formula
\end_layout

\begin_layout Standard
where 
\begin_inset Formula $D_{hkl}=$
\end_inset

crystal size (or x-ray coherence length) in 
\begin_inset Formula $\bar{r}_{hkl}^{*}$
\end_inset

 direction 
\end_layout

\begin_layout Standard
e.g., 
\begin_inset Formula $D_{100}=aM_{1}$
\end_inset

 
\begin_inset Formula $D\approx1000\mathring{A}\rightarrow\epsilon_{1/2}\approx1mrad=0.06$
\end_inset


\end_layout

\begin_layout Standard
Each Bragg Peak Max 
\begin_inset Formula $I_{hkl}^{(eu)}=\left|F_{hkl}\right|^{2}M^{2}$
\end_inset

, where 
\begin_inset Formula $F_{hkl}\rightarrow$
\end_inset

atomic positions in u.c.
\end_layout

\begin_layout Standard
Each Peak Width 
\begin_inset Formula $\rightarrow$
\end_inset

crystal size
\end_layout

\begin_layout Standard
\begin_inset Formula $D_{hkl}$
\end_inset

 from 
\begin_inset Formula $\theta-2\theta$
\end_inset

 scan (longitudinal scan) 
\begin_inset Formula $D_{(hkl)\perp}$
\end_inset

from 
\begin_inset Formula $\omega$
\end_inset

scan (transverse scan) 
\end_layout

