\begin_inset Caption Standard

\begin_layout Plain Layout
Scattering from two free electrons
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\delta_{2}=(x_{1}+x_{2})\frac{2\pi}{\lambda}=\frac{-2\pi}{\lambda}(\bar{S}-\bar{S}_{0})\bar{r}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\bar{\epsilon}_{Total}=\bar{\epsilon}_{1}+\bar{\epsilon}_{2}=e^{i\phi}(\bar{E}_{1}e^{i\delta_{1}}+\bar{E}_{2}e^{i\delta_{2}})
\]

\end_inset

 
\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\phi=\frac{2\pi R}{\lambda}-\omega t$
\end_inset

 
\begin_inset Formula $\delta_{1}=0$
\end_inset

 
\begin_inset Formula $E_{2}=E_{1}=E_{e}$
\end_inset

 
\begin_inset Formula $R\gg r$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
In general, for N free electrons
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
\bar{\epsilon}_{tot}=\sum_{n=1}^{N}\bar{\epsilon}_{n}=\bar{E}_{e}e^{i\phi}\sum_{n}e^{i\delta_{n}}
\]

\end_inset

 Superposition Principle
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
I_{tot}\propto|\epsilon_{tot}|^{2}=E_{e}^{2}|\sum_{n=1}^{n}e^{i\delta_{n}}|^{2}=\frac{r_{e}^{2}}{R^{2}}\left(\frac{1+cos^{2}2\theta}{2}\right)|\sum_{n=1}^{N}e^{i\delta_{n}}|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
I_{tot}=I_{e}|\sum_{n=1}^{N}e^{i\delta_{n}}|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $2\theta=0\rightarrow\frac{I_{tot}}{I_{e}}=N^{2}$
\end_inset


\begin_inset Formula $2\theta\neq0\rightarrow\leq N^{2}$
\end_inset


\end_layout

\begin_layout Standard
Note if the scattered waves had slightly different wavelengths 
\begin_inset Formula $\lambda_{n}>\lambda_{0}$
\end_inset


\begin_inset Formula $\rightarrow$
\end_inset

modified scattering 
\begin_inset Formula $\rightarrow$
\end_inset

incoherent scattering 
\begin_inset Formula $\rightarrow$
\end_inset


\begin_inset Formula $(I_{tot})_{mod}=N(I_{e})_{mod}$
\end_inset


\end_layout

\begin_layout Subsubsection
