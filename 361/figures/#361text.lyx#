\begin_layout Standard
Beam area 
\begin_inset Formula $\rightarrow$
\end_inset

projected area A/sin
\begin_inset Formula $\alpha$
\end_inset

 
\end_layout

\begin_layout Standard
Volume element 
\begin_inset Formula $dV=\frac{A}{sin\alpha}dz$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Diffracted Intensity at depth z
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
dI_{z}=C\frac{A}{sin\alpha}dzI_{0}e^{-uz/sin\alpha}e^{-uz/sin\beta}
\]

\end_inset

 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $e^{-uz/sin\alpha}$
\end_inset

- in transmission factor 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $e^{-uz/sin\beta}$
\end_inset

- out transmission factor
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I=\int_{0}^{t}dI_{z}=I_{0}C\frac{A}{\mu}\left(1+\frac{sin\alpha}{sin\beta}\right)^{-1}
\]

\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $\int_{0}^{t}dI_{z}=\int_{0}^{\infty}dI_{z}$
\end_inset

 
\begin_inset Quotes eld
\end_inset

t
\begin_inset Quotes erd
\end_inset

 drops out by assuming 
\begin_inset Formula $\mu t\gg1$
\end_inset

 or 
\begin_inset Formula $t\rightarrow\infty$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

