\begin_layout Subsubsection
Reciprocal Lattice Treatment of Rotating-Crystal Method
\end_layout

\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status open

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Graphics
	filename figures/reciplatsphere.png
	width 40page%

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula $\bar{b}_{1}=\bar{a}^{*}$
\end_inset

,
\begin_inset Formula $\bar{b}_{2}=\bar{b}^{*}$
\end_inset

, 
\begin_inset Formula $\bar{c}_{2}=\bar{c}^{*}$
\end_inset

 
\end_layout

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Caption Standard

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Standard
The reciprocal lattice rotates about 
\begin_inset Formula $\bar{r}_{100}^{*}=\bar{c}^{*}$
\end_inset

as the crystal rotates about 
\begin_inset Formula $\bar{c}.$
\end_inset


\end_layout

\begin_layout Standard
Spots appear on the film when reciprocal lattice points coincide with the
 Ewald sphere.
 
\end_layout

\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status open

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Graphics
	filename figures/recipewald.png
	width 25page%

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula $\frac{\bar{S}}{\lambda}-\frac{\bar{S}_{0}}{\lambda}=\bar{Q}=\bar{r}_{hkl}^{*}$
\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula $\bar{r}^{*}=\bar{r}_{H}^{*}+\bar{r}_{V}^{*}$
\end_inset

 
\end_layout

\begin_layout Plain Layout
Horizontal and Vertical components
\end_layout

\begin_layout Plain Layout
\begin_inset Formula $\alpha=$
\end_inset

In-Plane Angle
\end_layout

\begin_layout Plain Layout
\begin_inset Formula $\beta=$
\end_inset

Elevation Angle
\end_layout

\begin_layout Plain Layout
Chicago = 
\begin_inset Formula $88\textdegree W,$
\end_inset

 
\begin_inset Formula $42\textdegree N$
\end_inset


\end_layout

\begin_layout Plain Layout
