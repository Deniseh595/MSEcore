\begin_inset Caption Standard

\begin_layout Plain Layout
Scattering from collection of atoms
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_layout Standard
Extra path length is 
\begin_inset Formula $-\bar{R}_{m}\cdot(\bar{S}-\bar{S}_{o})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{E_{Total}}{E_{e}}=\sum_{m=0}^{N-1}f_{m}e^{2\pi i\bar{Q}\cdot\bar{R}_{m}}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{Q}=\frac{\bar{S}-\bar{S}_{o}}{\lambda}\leftarrow$
\end_inset

scattering vector 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $f_{1}=f_{2}:$
\end_inset

 If all atoms are same type, otherwise different 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{(eu)}=|\frac{E_{Total}}{E_{e}}|^{2}=\left[\sum_{m=0}^{N-1}f_{m}e^{2\pi i\bar{Q}\cdot\bar{R}_{m}}\right]\left[\sum_{m=0}^{N-1}f_{m}e^{-2\pi i\bar{Q}\cdot\bar{R}_{m}}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\sum_{m=0}^{N-1}\sum_{n=0}^{N-1}f_{m}f_{n}e^{2\pi\bar{Q}\cdot(\bar{R}_{m}-\bar{R}_{n})}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
I_{eu}=\sum_{m=0}^{N-1}\sum_{n=0}^{N-1}f_{m}f_{n}e^{2\pi i\bar{Q}\cdot\bar{r}_{mn}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status collapsed

