\begin_layout Plain Layout
\noindent
\align center
\begin_inset Formula $g_{0}=e,g_{1}=3,g_{2}=3^{2},g_{3}=2_{x},g_{4}=2_{Y},g_{5}=2_{U}$
\end_inset


