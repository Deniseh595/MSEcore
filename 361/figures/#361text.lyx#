\align center
\begin_inset Formula $\bar{a}^{*}=\frac{\bar{b}\times\bar{c}}{\bar{a}\cdot(\bar{b}\times\bar{c})}$
\end_inset

 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{b}^{*}=\frac{\bar{c}\times\bar{a}}{\bar{b}\cdot(\bar{c}\times\bar{a)}}$
\end_inset

 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{c}^{*}=\frac{\bar{a}\times\bar{b}}{\bar{c}\cdot(\bar{a}\times\bar{b)}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Note:
\end_layout

\begin_layout Itemize
\begin_inset Formula $\bar{a}^{*}\bot\, bc$
\end_inset

 plane 
\begin_inset Formula $\bar{b}^{*}\bot\, ac$
\end_inset

plane 
\begin_inset Formula $\bar{c}^{*}\bot\, ac$
\end_inset

 plane
\end_layout

\begin_layout Itemize
\begin_inset Formula $\bar{a}\cdot(\bar{b}\times\bar{c})=\bar{b}\cdot(\bar{c}\times\bar{a})=\bar{c}\cdot(\bar{a}\times\bar{b})=V$
\end_inset

 =Volume of unit cell
\end_layout

\begin_layout Itemize
\begin_inset Formula $\bar{a}^{*}\cdot\,\bar{a}=1$
\end_inset

, 
\begin_inset Formula $\bar{b}^{*}\cdot\bar{\, b}=1$
\end_inset

, 
\begin_inset Formula $\bar{c}^{*}\cdot\,\bar{c}=1$
\end_inset


\end_layout

