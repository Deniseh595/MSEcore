\begin_inset Formula $f_{n}=(f_{0}(\frac{sin\theta}{\lambda})+\Delta f'+i\Delta f")_{n}$
\end_inset


\end_layout

\begin_layout Standard
Assume 
\begin_inset Formula $f_{n}=(f_{0})_{n}$
\end_inset

 atoms at positions 
\begin_inset Formula $\bar{r}_{n}$
\end_inset

 with 
\begin_inset Formula $f_{n}$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $\bar{r}_{n}=x_{n}\bar{a}+y_{n}\bar{b}+z_{n}\bar{c}$
\end_inset


\end_layout

\begin_layout Standard
at the Bragg peak 
\begin_inset Formula $\bar{Q}=\bar{r}_{hkl}^{*}=h\bar{a}^{*}+k\bar{b}^{*}+l\bar{c}^{*}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\therefore F_{hkl}=\sum_{n=0}^{N-1}f_{n}e^{2\pi i(hx_{n}+ky_{n}+lz_{n})}
\]

\end_inset


