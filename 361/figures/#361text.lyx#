\begin_layout Standard
Scattering waves from 2 electrons at detector: distance R in 
\begin_inset Formula $\bar{S}$
\end_inset

 direction R >> r
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
E_{1}(R,t)=E_{1}cos\left[\frac{2}{\pi}R-\omega t\right]=E_{1}cos\phi
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
E_{2}(R,t)=E_{2}cos\left[\frac{2\pi R}{\lambda}+\delta-\omega t\right]=E_{2}cos(\phi+\delta)
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $E_{2}=E_{1}\leftarrow R\gg r$
\end_inset

 
\end_layout

\begin_layout Standard
\noindent
\align center
use 
\begin_inset Formula $e^{i\phi}=cos\phi+isin\phi$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $e^{i(\phi+\delta)}=e^{i\phi}e^{i\delta}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Sum amplitudes at detector 
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
\epsilon(R,t)=E_{1}e^{i\phi}+E_{2}e^{i\phi}e^{i\delta}=E_{1}e^{i\phi}(1+e^{i\delta})
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
I\propto\epsilon^{2}=|\epsilon|^{2}=\epsilon\cdot\epsilon^{*}=E_{1}^{2}(1+e^{i\delta})(1+e^{-i\delta})=E_{1}^{2}(2+e^{i\delta}+e^{-i\delta})=2E_{1}^{2}(1+cos\delta)
\]

\end_inset

 
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\epsilon^{2}=4E_{1}^{2}$
\end_inset

 for 
\begin_inset Formula $\delta=0,2\pi,...$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\epsilon^{2}=0$
\end_inset

 for 
\begin_inset Formula $\delta=\pi,3\pi,...$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\epsilon^{2}=2E_{1}^{2}$
\end_inset

for 
\begin_inset Formula $\delta=\pm\frac{\pi}{2},...$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center

\size small
\begin_inset Formula $\rightarrow x_{1}+x_{2}=-\bar{r}\cdot(\bar{S}-\bar{S}_{o})=n\lambda$
\end_inset


\end_layout

