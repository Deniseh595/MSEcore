\begin_inset Graphics
	filename figures/directionindices.png
	width 25page%

\end_inset


\begin_inset Caption Standard

\begin_layout Plain Layout
Direction Indices
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard

\series bold
Zone
\series default
: 2 planes intersect at a line [uvw] known as a 
\series bold
zone axis
\series default
.
 All (hkl) planes that contain this line belong to the same zone.
 
\end_layout

\begin_layout Description
Let 
\begin_inset Formula $\sigma_{hkl}$
\end_inset

be the normal vector for the plane (hkl).
\end_layout

\begin_layout Description
Then 
\begin_inset Formula $\sigma_{hkl}\cdot[uvw]=0$
\end_inset

 
\size small
if hkl plane belongs to [uvw] zone
\end_layout

\begin_layout Description
For cubic unit cell 
\begin_inset Formula $\sigma_{hkl}=c[hkl]$
\end_inset

 
\begin_inset Formula $\rightarrow$
\end_inset


\begin_inset Formula $hu+kv+lw=0$
\end_inset


\end_layout

\begin_layout Description
[010] is ZA for (001), (100), (102), (10
\begin_inset Formula $\bar{2})$
\end_inset


\end_layout

