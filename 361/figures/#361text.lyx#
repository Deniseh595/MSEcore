\begin_layout Standard
Substrate Reflectivity: 
\end_layout

\begin_layout Standard
\begin_inset Formula $R_{s}=|r_{s}(q)|^{2}$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
r_{s}(q)=\frac{4\pi ir_{e}F_{s}(q)}{AQ(1-e^{-iqc})}
\]

\end_inset

 
\begin_inset Formula $A=\mbox{Area of 1x1 u.c. =\ensuremath{12.8\mathring{A}^{2}}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F_{s}(q)=2f_{Si}cos(qc/8),
\]

\end_inset

 
\begin_inset Formula 
\[
c=d_{111}=3.135\mathring{A}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
R_{Tot}(q)=|r_{s}(q)+r_{M}(q)^{2}|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
r_{M}(q)=\frac{4\pi ir_{e}\Theta F_{M}(q)}{Aq}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\Theta=$
\end_inset

Molecules per 1x1 u.c = 1/2 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F_{M}(q)=f_{c}(q)\sum_{j=1}^{8}e^{iqz_{i}^{C}}+f_{Br}(q)e^{iqz^{Br}}
\]

\end_inset


\end_layout

