\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
Find the zone axis for two intersecting planes 
\end_layout

\begin_deeper
\begin_layout Standard
(
\begin_inset Formula $h_{1}k_{1}l_{1})$
\end_inset

and 
\begin_inset Formula $(h_{2}l_{2}k_{2})$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{z}=[uvw]=u\bar{a}+v\bar{b}+w\bar{c}$
\end_inset


\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $\bar{r}_{hkl}*\bot(hkl)$
\end_inset

plane, 
\begin_inset Formula $\bar{r}_{hkl}*\bot\bar{z}$
\end_inset

 for any (hkl) belonging to zone 
\begin_inset Formula $\bar{z}$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{z}\cdot\,\bar{r_{1}}*=uh_{1}+vk_{1}+wl_{1}=0$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{z}\cdot\,\bar{r_{2}}*=uh_{2}+vk_{2}+wl_{2}=0$
\end_inset


\end_layout

\begin_layout Standard
Solve simultaneous equations for u, v, w
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $u=k_{1}l_{2}-l_{1}k_{2}$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $v=l_{1}h_{2}-h_{1}l_{2}$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $w=h_{1}k_{2}-k_{1}h_{2}$
\end_inset


\end_layout

\begin_layout Standard
2 equations and 3 unknowns 
\begin_inset Formula $\rightarrow$
\end_inset

uvw determined to within a scale factor
\end_layout

\begin_layout Standard
\begin_inset space ~
\end_inset


\end_layout

\begin_layout Standard
Example:
\end_layout

\begin_layout Standard
What is the zone axis (or edge formed by) for 
\begin_inset Formula $(\bar{1}10$
\end_inset

) and (010)?
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $u=(1)(0)-(0)(1)=0$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $v=(0)(0)-(-1)(0)=0$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $w=(-1)(1)-(1)(0)=-1$
\end_inset


\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{z}=[uvw]=[00\bar{1}]$
\end_inset

or 
\begin_inset Formula $[001]=\bar{c}-axis$
\end_inset


\end_layout

\begin_layout Standard
Equivalent to doing vector cross product:
\end_layout

\begin_layout Standard
\noindent
\align center
\begin_inset Formula $\bar{r}_{\bar{1}10}^{*}\times\,\bar{r}_{010}^{*}$
\end_inset


\end_layout

