\begin_layout Standard
\noindent
\align center
\begin_inset Formula 
\[
f=\frac{E_{atom}}{E_{e^{-}}}
\]

\end_inset

 scattered amplitude ratio
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f=\int_{atom}ρ(\bar{r})e^{i\frac{2\pi}{\lambda}(\bar{S}-\bar{S}_{0})\bar{r}}dV
\]

\end_inset


\end_layout

\begin_layout Itemize
Note: 
\begin_inset Formula $e^{i\delta}$
\end_inset

, 
\begin_inset Formula $\delta=$
\end_inset

phase shift at 
\begin_inset Formula $\bar{r}$
\end_inset

 relative to origin 
\end_layout

\begin_layout Itemize
f depends on 
\begin_inset Formula $2\theta\rightarrow$
\end_inset

intra atomic interference effect 
\end_layout

\begin_layout Itemize
partially destructive interference unless 
\begin_inset Formula $2\theta=0\rightarrow\bar{S}=\bar{S}_{0}\rightarrow f=Z=\int_{atom}ρdV$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $f=\sum f_{e}\rightarrow$
\end_inset

for coherent scattering 
\end_layout

\begin_layout Paragraph
