	filename figures/photoelectron.png
	width 20page%

\end_inset


\begin_inset Graphics
	filename figures/electronfeels.png
	width 20page%

\end_inset


\begin_inset Graphics
	filename figures/absopspec.png
	width 30page%

\end_inset


