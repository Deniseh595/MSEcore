\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula
\begin{equation}
\left\langle x^{2}\right\rangle =\underset{x}{\sum}x^{2}Pr\left(x\right)dx
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The procedure can be generalized to calculate the average of any function
 of
\begin_inset Formula $x$
\end_inset

:
\end_layout

\begin_layout Standard
\align center
\begin_inset Formula
\begin{equation}
\left\langle f\left(x\right)\right\rangle =\underset{x}{\sum}f\left(x\right)Pr\left(x\right)
\end{equation}

\end_inset


\end_layout

