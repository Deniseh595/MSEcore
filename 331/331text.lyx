\end_layout

\begin_layout Standard
\align center
\begin_inset Formula
\begin{equation}
\frac{\Delta V_{f}}{V}=\left(\alpha_{\ell}-\alpha_{g}\right)\Delta T\label{eq:free volume vs. T}
\end{equation}

\end_inset


\end_layout

